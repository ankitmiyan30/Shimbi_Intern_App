<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/opration_adapter_tv_company_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:textColor="#3a3e42"
        android:text="SR,Computers"
        android:textSize="18sp"	
        android:textStyle="bold"
        android:paddingLeft="5dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
         >
 			<LinearLayout
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal"
        	android:layout_weight="1"
         	>
        	<TextView
            android:id="@+id/opration_adapter_tv_product_invoice_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MBIN24"
            android:textSize="15sp"
            android:gravity="left"
          	android:paddingLeft="5dp"
            android:textColor="#798182"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        	<TextView
            android:id="@+id/opration_adapter_tv_product_receipts_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REC125"
            android:textSize="15sp"
            android:paddingLeft="15dp"
            android:textColor="#798182"
            android:textAppearance="?android:attr/textAppearanceLarge" />
           </LinearLayout>
          <TextView
            android:id="@+id/opration_adapter_tv_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000(INR)"
            android:layout_weight="1"
            android:textSize="15sp"
            android:paddingRight="5dp"
            android:gravity="right"
            android:textColor="#798182"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2" >

        <TextView
            android:id="@+id/opration_adapter_tv_invoice_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13 june 2013"
            android:layout_weight="1"
            android:gravity="left"
            android:textColor="#798182"
            android:textSize="15sp"
            android:paddingLeft="5dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/opration_adapter_tv_open_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#3a3e42"
            android:paddingRight="5dp"
            android:text="Open"
            android:textStyle="bold"
            android:layout_weight="1"
            android:gravity="right"
            android:textSize="15sp"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:orientation="vertical"
        android:background="#33B5E5" >
    </LinearLayout>

</LinearLayout>