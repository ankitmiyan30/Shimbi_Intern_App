<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        ><LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/layout_blank_1"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:id="@+id/layout_invoice_date"
            >
			
            <TextView
                android:layout_width="6dp"
                android:layout_height="fill_parent"
				android:layout_marginLeft="10dp"          
                android:background="#99CC00"
             
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
              >

                <LinearLayout
                    android:id="@+id/layout_invoice_date1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/estimate_estimate_date_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                           android:textSize="@dimen/textsize" 
                    	android:ems="6"
                    	android:layout_marginLeft="5dp"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <TextView
                        android:id="@+id/estimate_estimate_date_result"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="8"
                           android:textSize="@dimen/textsize" 
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                </LinearLayout>

            </LinearLayout>
			
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_blank2"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:orientation="vertical" >
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            >
			
            <TextView
                android:layout_width="6dp"
                android:layout_height="fill_parent"
				android:layout_marginLeft="10dp"            
                android:background="#33B5E5"
             
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="2" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                       android:id="@+id/estimate_amount_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/amount"
                    	android:ems="6"
                    	   android:textSize="@dimen/textsize" 
                    	android:layout_marginLeft="5dp"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <TextView
                        android:id="@+id/estimate_amount_result"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"  
                        android:ems="8"
                           android:textSize="@dimen/textsize" 
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                </LinearLayout>

                
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                       android:id="@+id/estimate_shipping_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/amount"
                    	android:ems="6"
                    	   android:textSize="@dimen/textsize" 
                    	android:layout_marginLeft="5dp"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <TextView
                        android:id="@+id/estimate_shipping_result"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"  
                        android:ems="8"
                           android:textSize="@dimen/textsize" 
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                </LinearLayout>
                
                
                
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                       android:id="@+id/estimate_additional_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/amount"
                    	android:ems="6"
                    	   android:textSize="@dimen/textsize" 
                    	android:layout_marginLeft="5dp"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <TextView
                        android:id="@+id/estimate_additional_result"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"  
                        android:ems="8"
                           android:textSize="@dimen/textsize" 
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                </LinearLayout>
                
            </LinearLayout>
			
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_blank3"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:orientation="vertical" >
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_service_tax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
           >
			
           	 <TextView
               android:layout_width="6dp"
                android:layout_height="fill_parent"
				android:layout_marginLeft="10dp"           
                android:background="#2285ff"
             	android:id="@+id/tv__horizantal"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <LinearLayout
                android:id="@+id/l_service_main_estimate"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="2" >

                <LinearLayout
                    android:id="@+id/l_horizantal_service_tax_estimate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                         android:id="@+id/estimate_service_tax_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                         android:textSize="@dimen/textsize" 
                    	android:ems="6"
                    	android:layout_marginLeft="5dp"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <TextView
                        android:id="@+id/estimate_service_tax_result"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="8"
                           android:textSize="@dimen/textsize" 
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/estimate_sales_tax_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                           android:textSize="@dimen/textsize" 
                        android:ems="6"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <TextView
                        android:id="@+id/estimate_sales_tax_sales_tax_result"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="8"
                           android:textSize="@dimen/textsize" 
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                </LinearLayout>

            </LinearLayout>
			
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_blank4"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:orientation="vertical" >
        </LinearLayout>
         <LinearLayout
            android:id="@+id/layout_color_bottom"
            android:layout_width="fill_parent"
            android:layout_height="7dp"
            android:orientation="vertical"
            android:background="#33B5E5" >
        </LinearLayout>
        <LinearLayout
             android:id="@+id/layout_blank_bottom"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:orientation="vertical" >
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_payabal_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
           >
			
            <TextView
                android:layout_width="6dp"
                android:layout_height="fill_parent"
				android:layout_marginLeft="10dp"              
                android:background="#ff6f91"
             
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="2" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/estimate_payabal_amount_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/payabal_amount"
                    	android:ems="6"
                    	   android:textSize="@dimen/textsize" 
                    	android:layout_marginLeft="5dp"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <TextView
                        android:id="@+id/estimate_payable_amount_result"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="8"
                           android:textSize="@dimen/textsize" 
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                </LinearLayout>

            </LinearLayout>
			
        </LinearLayout>

        

       
    </LinearLayout>
</ScrollView>
</RelativeLayout>